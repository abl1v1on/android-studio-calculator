<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#595858"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textResultView"
        android:layout_width="173dp"
        android:layout_height="38dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.188" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.336">

        <Button
            android:id="@+id/button1"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:contentDescription="1"
            android:onClick="onClickButton"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:contentDescription="2"
            android:onClick="onClickButton"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:contentDescription="3"
            android:onClick="onClickButton"
            android:text="3" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:contentDescription="+"
            android:onClick="onCLickOperator"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

        <Button
            android:id="@+id/button4"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:contentDescription="4"
            android:onClick="onClickButton"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:contentDescription="5"
            android:onClick="onClickButton"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:contentDescription="6"
            android:onClick="onClickButton"
            android:text="6" />

        <Button
            android:id="@+id/buttonSub"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:contentDescription="-"
            android:onClick="onCLickOperator"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/button7"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:contentDescription="7"
            android:onClick="onClickButton"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:contentDescription="8"
            android:onClick="onClickButton"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:contentDescription="9"
            android:onClick="onClickButton"
            android:text="9" />

        <Button
            android:id="@+id/buttonMult"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:contentDescription="*"
            android:onClick="onCLickOperator"
            android:text="*" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <Button
            android:id="@+id/buttonZero"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:contentDescription="0"
            android:onClick="onClickButton"
            android:text="0" />

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:onClick="calculate"
            android:text="=" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:contentDescription="/"
            android:onClick="onCLickOperator"
            android:text="/" />

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clear"
        android:text="C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

</androidx.constraintlayout.widget.ConstraintLayout>